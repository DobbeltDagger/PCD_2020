{% extends "2019_base.njk" %}

{% block postContent %}

  <div class='maxWidth'>
    <div id='galleryWrapper'>
      {% for thumb in collections.PCD2019gallery %}
        <a
          data-mediabox="PCD2019Gallery"
          data-title="Processing Community Day @Aarhus 2019"
          href='{{ thumb.data.imageUrl }}'
          title='{{ thumb.data.title }}'
          alt='{{ thumb.data.title }}'>
          <img src='{{ thumb.data.thumbUrl }}' class='maxWidth' alt='{{ thumb.data.title }}' title='{{ thumb.data.title }}' />
        </a>
      {% endfor %}
    </div>
  </div>

  <!-- put in videos from PCD 2019 -->
  <div class="maxWidth">
    <div id='videoGalleryWrapper'>

      <p>hey, video</p>

      <!-- her er resource til video i VA-mediabox:
      https://github.com/jirihybek/wa-mediabox
      -->
      <a href="https://www.youtube.com/embed/FA_8TY9Z5Zg?rel=0"
        data-mediabox="my-gallery-name"
        data-iframe="true"
        data-width="853"
        data-height="480"
        data-title="Sample video in iframe">
        <img src="image-thumb.jpg" alt="Image" />
      </a>

      {% for thumb in collections.PCD2019videoGallery %}
        <a
          href='{{ thumb.data.youtubeUrl }}'
          data-mediabox="PCD2019videoGallery"
          data-iframe="true"
          data-title="Processing Community Day @Aarhus 2019"
          data-width="853"
          data-height="480"
          data-title='{{ thumb.data.title }}'
          data-alt='{{ thumb.data.title }}'>
          <img src='{{ thumb.data.thumbUrl }}' class='maxWidth' alt='{{ thumb.data.title }}' title='{{ thumb.data.title }}' />
        </a>
      {% endfor %}
    </div>
  </div>

{% endblock postContent %}